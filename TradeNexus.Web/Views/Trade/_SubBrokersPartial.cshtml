@model IEnumerable<dynamic>
@using TradeNexus.Web.Helpers

<div class="table-responsive">
    <table class="table table-hover align-middle mb-0" style="font-size: 0.85rem;">
        <thead class="bg-light">
            <tr>
                <th class="ps-3 text-uppercase small fw-bold text-muted">Broker Details</th>
                <th class="text-uppercase small fw-bold text-muted">ID / Code</th>
                <th class="text-center text-uppercase small fw-bold text-muted">Clients</th>
                <th class="text-end pe-3 text-uppercase small fw-bold text-muted">Total Exposure</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sb in Model)
            {
                <tr>
                    <td class="ps-3">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white p-2 rounded me-2"><i class="fas fa-building fa-xs"></i></div>
                            <div>
                                <div class="fw-bold text-dark">@sb.Name</div>
                                <div class="small text-muted">Authorized Segment: Capital</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="badge bg-light text-dark border">ID: @sb.Id</span>
                        <br><small class="text-muted">Code: @sb.Code</small>
                    </td>
                    <td class="text-center">
                        <div class="fw-bold">@sb.ClientCount</div>
                        <small class="text-muted">Active</small>
                    </td>
                    <td class="text-end pe-3 font-monospace fw-bold text-primary">
                        @(((decimal)sb.TotalExposure).ToIndianCurrency())
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
