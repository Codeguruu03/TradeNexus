@{
    ViewData["Title"] = "Risk Analysis";
    var resultStr = ViewBag.RiskResult as string;
    dynamic result = Newtonsoft.Json.JsonConvert.DeserializeObject(resultStr);
}

<div class="pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Risk Analysis Result</h1>
    <p class="text-muted">Client ID: @ViewBag.ClientId</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-@(result.riskLevel == "High" ? "danger" : (result.riskLevel == "Medium" ? "warning" : "success")) shadow">
            <div class="card-header bg-@(result.riskLevel == "High" ? "danger" : (result.riskLevel == "Medium" ? "warning" : "success")) text-white">
                <h5 class="card-title mb-0">Risk Level: @result.riskLevel</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Total Exposure
                        <span class="badge badge-primary badge-pill">@result.totalExposure</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Required Margin (20%)
                        <span class="badge badge-info badge-pill">@result.requiredMargin</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Limit Breach Detected
                        <span class="badge badge-@(result.limitBreach == true ? "danger" : "light") badge-pill">
                            @(result.limitBreach == true ? "YES" : "NO")
                        </span>
                    </li>
                </ul>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">
                Raw Engine Output (JSON)
            </div>
            <div class="card-body">
                <pre class="bg-light p-3"><code>@resultStr</code></pre>
            </div>
        </div>
    </div>
</div>
